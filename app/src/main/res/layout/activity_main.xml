<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ListView
            android:id="@+id/list"
            android:layout_width="397dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="178dp"
            app:layout_constraintBottom_toTopOf="@+id/lb_donate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_totalDeaths"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="TOTAL DEATHS"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/title_totalRecovered"
            app:layout_constraintStart_toEndOf="@+id/title_totalCases"
            app:layout_constraintTop_toBottomOf="@+id/lb_title" />

        <TextView
            android:id="@+id/title_totalRecovered"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="TOTAL RECOVERED"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title_totalDeaths"
            app:layout_constraintTop_toBottomOf="@+id/lb_title" />

        <TextView
            android:id="@+id/txt_totalCases"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFEB3B"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txt_totalDeaths"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_totalDeaths"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#E60C0C"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/title_totalRecovered"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintStart_toEndOf="@+id/title_totalCases"
            app:layout_constraintTop_toBottomOf="@+id/title_totalDeaths"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_totalRecovered"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_totalDeaths"
            app:layout_constraintTop_toBottomOf="@+id/title_totalRecovered"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lb_title"
            android:layout_width="390dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="CORONA VIRUS PANDEMIC"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_totalCases"
            android:layout_width="115dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="TOTAL CASES"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/title_totalDeaths"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lb_title" />

        <TextView
            android:id="@+id/lb_donate"
            android:layout_width="392dp"
            android:layout_height="20dp"
            android:layout_marginBottom="9dp"
            android:text="Donate BTC Adress"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="btn_Copied"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

